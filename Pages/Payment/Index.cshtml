@page
@model ParkingService.Pages.Payment.IndexModel
@{
    ViewData["Title"] = "Journal";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h1 class="text-center">Payment</h1>
        </div>
    </div>
    <hr />
    <div class="row text-center">
        <div class="col-12">
            <div class="row">
                <div class="col-4">
                    <p><strong>Car number</strong></p>
                </div>
                <div class="col-4">
                    <p><strong>Balance</strong></p>
                </div>
            </div>
            <hr />
            <div class="row">
                @foreach (var car in Model.Cars)
                {
                    <div class="col-4">
                        <p>@car.PlateNumber</p>
                    </div>
                    @if (car.Payment < 0)
                    {
                        <div class="col-4  payment">
                            <p style="color:red;">@car.Payment</p>
                        </div>
                    }
                    @if (car.Payment >= 0)
                    {
                        <div class="col-4 ">
                            <p style="color:green;">@car.Payment</p>
                        </div>
                    }
                    <div class="col-4">
                        <a asp-page="/Balance/Index" asp-route-id="@car.Id"><i class="fas fa-wallet"></i></a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
