@page
@model ParkingService.Pages.Account.LoginModel

@{
    ViewData["Title"] = "Sign in";
}

<h1 class="text-center">Sign in to Parking Service</h1>
<hr />
<div class="container">
    <div class="row">
        <div class="col-sm-12 ">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group row">
                    <label asp-for="Login.Email" class="control-label col-sm-4 text-sm-right">Email:</label>
                    <input asp-for="Login.Email" class="form-control col-sm-5" type="email" />
                    <span asp-validation-for="Login.Email" class="text-danger text-center"></span>
                </div>
                <div class="form-group row">
                    <label asp-for="Login.Password" class="control-label col-sm-4 text-sm-right">Password:</label>
                    <input asp-for="Login.Password" class="form-control col-sm-5" />
                    <span asp-validation-for="Login.Password" class="text-danger"></span>
                </div>
                <div class="form-group text-center">
                    <input type="submit" value="Sign in" class="btn btn-primary" />
                </div>
                <div class="form-group text-center">
                    <a asp-page="Register">Sign up</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
