@page
@model ParkingService.Pages.Payment.IndexModel
@{
    ViewData["Title"] = "Journal";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h1 class="text-center">Payment</h1>
        </div>
    </div>
    <hr />
    <div class="row">
        <div class="col-12">
            <div class="row">
                <div class="col-4">
                    <p><strong>Car number</strong></p>
                </div>
                <div class="col-4">
                    <p><strong>Balance</strong></p>
                </div>
            </div>
            <hr />
            <div class="row">
                @foreach (var entry in Model.Entries)
                {
                    <div class="col-4">
                        <p>@entry.Car.PlateNumber</p>
                    </div>
                    <div class="col-4">
                        <p>@entry.Hours</p>
                    </div>
                    <div class="col-4">
                        <a asp-page="/Balance/Index" asp-route-id="@entry.Id"><i class="fas fa-wallet"></i></a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
