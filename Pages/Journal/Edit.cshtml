@page
@model ParkingService.Pages.Journal.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-center">Edit entry in journal</h1>
<hr />
<div class="container">
    <div class="row">
        <div class="col-10 ">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Entry.Id" />
                <div class="form-group row">
                    <label asp-for="Entry.CarId" class="control-label col-sm-4 text-sm-right">Car number:</label>
                    <select asp-for="Entry.CarId" class="form-control col-sm-6">
                        @foreach (var car in Model.Cars)
                        {
                            <option value="@car.Id">@car.PlateNumber</option>
                        }
                    </select>
                </div>
                <div class="form-group row">
                    <label asp-for="Entry.EntryTime" class="control-label col-sm-4 text-sm-right">Entry time:</label>
                    <input asp-for="Entry.EntryTime" class="form-control col-sm-6" />
                    <span asp-validation-for="Entry.EntryTime" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <label asp-for="Entry.LeavingTime" class="control-label col-sm-4 text-sm-right">Leaving Time:</label>
                    <input asp-for="Entry.LeavingTime" class="form-control col-sm-6" />
                    <span asp-validation-for="Entry.LeavingTime" class="text-danger"></span>
                </div>
                <div class="form-group text-center">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
        <div class="col-2">
            <a asp-page="Index">Back to journal</a>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
